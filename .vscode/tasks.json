{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Resources",
            "type": "shell",
            "command": "windres",
            "args": [
                "resources/resources.rc",
                "-O",
                "coff",
                "-o",
                "resources/resources.res"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Snake Game (Release)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-O2",
                "-Iheader",
                "src/*.c",
                "resources/resources.res",
                "-o",
                "bin/snake_game.exe",
                "-lgdi32",
                "-mwindows",
                "-s"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Compile Resources"]
        }
    ]
}
